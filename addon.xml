<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.unwatched-tv" version="0.5.8+matrix" name="Unwatched-TV Library" provider-name="-=Vd=-">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.simpleplugin3"/>
    <import addon="script.module.vsdbg" optional="true"/>
    <import addon="script.module.vd-common"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Unwatched TVShows</summary>
    <summary lang="ru">Непросмотренные сериалы</summary>
    <description lang="en">The plugin allows you to see which TV series from the media library have released new seasons/episodes.</description>
    <description lang="ru">Плагин позволяет узнать для каких сериалов из медиатеки вышли новые сезоны/серии</description>
    <language>en, ru</language>
    <website>https://vd-plugins.info</website>
    <source>https://github.com/vadyur/plugin.video.unwatched-tv</source>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>
